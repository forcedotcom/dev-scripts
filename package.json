{
  "name": "@salesforce/dev-scripts",
  "version": "3.1.0",
  "description": "Standardize package.json scripts and config files for Salesforce projects.",
  "repository": "forcedotcom/dev-scripts",
  "bin": {
    "sf-build": "bin/sf-build.js",
    "sf-ci-docs": "bin/sf-ci-docs.js",
    "sf-clean": "bin/sf-clean.js",
    "sf-compile": "bin/sf-compile.js",
    "sf-compile-test": "bin/sf-compile-test.js",
    "sf-docs": "bin/sf-docs.js",
    "sf-format": "bin/sf-format.js",
    "sf-install": "bin/sf-install.js",
    "sf-lerna-install": "bin/sf-lerna-install.js",
    "sf-lint": "bin/sf-lint.js",
    "sf-prepack": "bin/sf-prepack.js",
    "sf-test": "bin/sf-test.js"
  },
  "scripts": {
    "build": "echo 'no build necessary'",
    "format": "prettier --write \"{files,test,utils,bin}/**/*.+(js|json)\"",
    "lint": "eslint \"{files,test,utils,bin}/**/*.js\"",
    "clean": "bin/sf-clean.js",
    "clean-all": "bin/sf-clean.js all",
    "test": "nyc mocha test/**/*.test.js",
    "prepare": "husky install"
  },
  "keywords": [
    "sfdx"
  ],
  "author": "Platform CLI",
  "license": "BSD-3-Clause",
  "files": [
    "bin",
    "utils",
    "files",
    "sfdevrc.schema.json"
  ],
  "dependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@oclif/dev-cli": "^1",
    "@salesforce/dev-config": "^3.0.0",
    "@salesforce/prettier-config": "^0.0.2",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^9.0.0",
    "@types/node": "^15.6.1",
    "@types/sinon": "10.0.11",
    "chai": "^4.2.0",
    "chalk": "^4.0.0",
    "cosmiconfig": "^7.0.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-salesforce": "^1.1.0",
    "eslint-config-salesforce-license": "^0.1.6",
    "eslint-config-salesforce-typescript": "^1.1.1",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsdoc": "^35.1.2",
    "eslint-plugin-prefer-arrow": "^1.2.1",
    "husky": "^7.0.4",
    "mocha": "^9.1.3",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.0",
    "shelljs": "~0.8.4",
    "sinon": "10.0.0",
    "source-map-support": "~0.5.19",
    "ts-node": "^10.0.0",
    "typedoc": "0.22.18",
    "typedoc-plugin-missing-exports": "0.23.0",
    "typescript": "^4.1.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
